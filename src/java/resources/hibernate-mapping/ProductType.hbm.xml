<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="dao.ProductType" table="product_type">
        
        <id column="product_type_id"
            name="productTypeID"
            type="integer"/>
        
        <property column="product_type_name"
                  name="productTypeName"
                  type="string"/>
        
    </class>
</hibernate-mapping>
